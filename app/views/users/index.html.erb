<h1>Users#index</h1>

<h1> User info</h1>
	<%= attachment_image_tag current_user, :profile_image, :fill, 60, 60 %>
	<%= current_user.name %>
	<%= current_user.introduction %>
	<%= link_to "edit", edit_user_path(current_user.id) %>

<h1> New book</h1>
	<%= form_for(@book) do |f| %>
		<p>Title</p>
		<%= f.text_field :title %>
		<p>Opinion</p>
		<%= f.text_area :body %>
		<%= f.submit "Create Book" %>
	<% end %>

<h1>Users</h1>

<table>
	<tr>
		<th>image</th><th>name</th><th></th>
	<tr>

	<% @users.each do |user| %>

	<tr>
		<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60 %></td>
		<td><%= user.name %></td>
		<td><%= link_to "Show", user_path(user.id) %></td>
	</tr>

	<% end %>
</table>