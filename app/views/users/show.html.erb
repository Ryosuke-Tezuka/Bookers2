<h1>Users#show</h1>

<h1> User info</h1>
	<%= attachment_image_tag @user, :profile_image, :fill, 60, 60 %>
	<%= @user.name %>
	<%= @user.introduction %>

	<% if @user == current_user %>
	<%= link_to "edit", edit_user_path(current_user.id) %>
	<% else %>
	<%= link_to "edit2", user_path(current_user.id) %>
	<% end %>

<h1> New book</h1>
	<%= form_for(@book) do |f| %>
		<p>Title</p>
		<%= f.text_field :title %>
		<p>Opinion</p>
		<%= f.text_area :body %>
		<%= f.submit "Create Book" %>
	<% end %>

<h1> Books</h1>

<table>
	<tr>
		<th></th><th>Title</th><th>Opinion</th>
	<tr>

	<% @books.each do |book| %>

	<tr>
		<td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60 %></td>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
	</tr>

	<% end %>
</table>