<div class="container">
	<div class="row">
		<div class="col-lg-3">

<h2> User info</h2>
	<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:"100x100" %>
	<table class="table">
		<tr>
			<th>name</th>
			<th><%= @user.name %></th>
		</tr>
		<tr>
			<th>introduction</th>
			<th><%= @user.introduction %></th>
		</tr>
	</table>
	<% if @user == current_user %>
		<%= link_to edit_user_path(current_user.id) do %>
		<button type="button" class="btn btn-default btn-block">
		<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
		</button>
		<% end %>
	<% else %>
		<%= link_to user_path(current_user.id) do %>
		<button type="button" class="btn btn-default btn-block">
		<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
		</button>
		<% end %>
	<% end %>

<h2> New book</h2>

	<%= form_for(@book) do |f| %>

	<div class="form-group">
		<label class="control-label" for="title">Title</label>
		<%= f.text_field :title, class:"form-control" %>
	</div>
	<div class="form-group">
		<label class="control-label" for="opinion">Opinion</label>
		<%= f.text_area :body, class:"form-control" %>
	</div>
		<%= f.submit "Create Book", class:"btn btn-primary btn-block" %>

	<% end %>
</div>

<div class="col-lg-9">
<h2> Books</h2>

<table class="table table-hover">
	<tr>
		<th></th><th>Title</th><th>Opinion</th>
	</tr>

	<% @books.each do |book| %>

	<tr>
		<td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:"40x40" %></td>
		<td><%= link_to book.title, book_path(book.id) %></td>
		<td><%= book.body %></td>
	</tr>

	<% end %>
</table>
</div>
</div>
</div>
