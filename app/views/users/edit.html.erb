<div class="container">
<h2>Users info</h2>

<% if @user.errors.any? %>
	<p><%= @user.errors.count %> errors prohibited this obj from being saved:</p>
	<ul><% @user.errors.full_messages.each do |message| %>
		<li> <%= message %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for(@user) do |f| %>

	Name
	<%= f.text_field :name %>
	<p> Image</p>
	<%= f.attachment_field :profile_image %>
	Introduction
	<%= f.text_area :introduction %>
	<br>
	<%= f.submit "Update User" %>

<% end %>
</div>