<h1>Books#index</h1>

<% if @book.errors.any? %>
      <p><%= @book.errors.count %> errors prohibited this obj from being saved:</p>
      <ul><% @book.errors.full_messages.each do |message| %>
      	<li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

<h1> User info</h1>
	<%= attachment_image_tag current_user, :profile_image, :fill, 60, 60 %>
	<%= current_user.name %>
	<%= current_user.introduction %>
	<%= link_to "edit", edit_user_path(current_user.id) %>

<h1> New book</h1>
	<%= form_for(@book) do |f| %>

		<p>Title</p>
		<%= f.text_field :title %>
		<p>Opinion</p>
		<%= f.text_area :body %>
		<%= f.submit "Create Book" %>

	<% end %>

<h1> Books</h1>

<table>
	<tr>
		<th></th><th>Title</th><th>Opinion</th>
	<tr>

	<% @books.each do |book| %>

	<tr>
		<td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60 %></td>
		<td><%= link_to book.title, book_path(book.id) %></td>
		<td><%= book.body %></td>
	</tr>

	<% end %>
</table>